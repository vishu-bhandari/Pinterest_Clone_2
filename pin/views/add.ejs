<% include ./partials/header.ejs %>


    <div class="w-full min-h-screen bg-zinc-800 px-10 py-5 text-white">
        <h1 class="text-xl  ">Create a new post</h1>
        <hr class="w-[70px] mt-2 opacity-55">

        <form action="/createpost" method="post" enctype="multipart/form-data">
            <input class=" block w-1/3 px-2 py-2 " type="file" name="postimage">
            <input class="text-black block w-1/3 px-2 py-2 border rounded-md mt-2" type="text" placeholder="title" name="title">
            <textarea class=" text-black block w-1/3 px-2 h-60 py-2 border rounded-md mt-2" type="text" placeholder="Description"
                name="description"> </textarea>
            <input class=" block w-1/3 px-2 py-2  rounded-md bg-red-600 mt-2" type="submit" value="Create Post">
        </form>
    </div>



